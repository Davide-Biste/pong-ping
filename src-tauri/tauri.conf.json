{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PingPongArena",
  "version": "0.1.0",
  "identifier": "com.davide.pingpong",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Ping o Pong ?",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "targets": [
      "deb",
      "appimage"
    ],
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Davide-Biste/pong-ping/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEEwMzM4NzIwNDg0MEEzQ0YKUldUUG8wQklJSWN6b09ld2JFdWJjUUJPaXg2YnJZbnUwRXQvVnkvc0kzUGxxQ004Vk8xL2ljK0IK"
    }
  }
}
